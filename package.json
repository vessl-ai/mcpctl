{
  "name": "@vessl-ai/mcpctl",
  "version": "0.0.4",
  "description": "The MCP Execution Control Tool - A tool for controlling the MCP execution",
  "main": "dist/mcpctl.js",
  "bin": {
    "mcpctl": "dist/mcpctl.js",
    "mcpctld": "dist/mcpctld.js"
  },
  "files": [
    "dist/mcpctl.js",
    "dist/mcpctld.js",
    "dist/service-templates.js",
    "dist/*.js.map",
    "scripts/postinstall.js"
  ],
  "scripts": {
    "test": "jest",
    "cli": "ts-node src/cli/cli.ts",
    "daemon": "ts-node src/daemon/main.ts",
    "clean": "rm -rf dist",
    "build": "tsc && node build.js",
    "install-cli:macos": "cp dist/mcpctl.js /usr/local/bin/mcpctl && cp dist/mcpctld.js /usr/local/bin/mcpctld",
    "install-cli:linux": "sudo cp dist/mcpctl.js /usr/local/bin/mcpctl && sudo cp dist/mcpctld.js /usr/local/bin/mcpctld",
    "install-cli:windows": "cp dist/mcpctl.js $env:USERPROFILE\\AppData\\Roaming\\npm\\mcpctl.cmd",
    "prepublishOnly": "pnpm clean && pnpm build",
    "postinstall": "node scripts/postinstall.js"
  },
  "keywords": [
    "mcp",
    "cli",
    "control",
    "execution",
    "modelcontextprotocol",
    "config-management"
  ],
  "author": "Jaejun Kyle Lee<kyle@vessl.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vessl-ai/mcpctl.git"
  },
  "bugs": {
    "url": "https://github.com/vessl-ai/mcpctl/issues"
  },
  "homepage": "https://github.com/vessl-ai/mcpctl#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/argparse": "^2.0.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.20.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@expo/sudo-prompt": "^9.3.2",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "arg": "^5.0.2",
    "argparse": "^2.0.1",
    "axios": "^1.8.4",
    "chalk": "4",
    "cli-table3": "^0.6.5",
    "eventsource": "^3.0.6",
    "keytar": "^7.9.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.95.0",
    "portfinder": "^1.0.35",
    "uuid": "^11.1.0",
    "vscode-jsonrpc": "^8.2.1",
    "zod": "^3.24.2"
  }
}